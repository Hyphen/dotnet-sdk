# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab

# Visual Studio demands 2-spaced project files
[*.{csproj,props,targets,yaml}]
indent_style = space
indent_size = 2

[*.slnx]
end_of_line = crlf

[*.cs]
# Analyzer severity
dotnet_diagnostic.CA1031.severity  = none  # Do not catch general exception types
dotnet_diagnostic.IDE0130.severity = none  # We use folders for organization, not to indicate namespaces
